    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Modificaciones</h1>
            <h2>Ajustes de la portada</h2>
            <ul>
                <li>Tamaño recomendado para portada: 1800x800px</li>
                <li>
                    Se pueden agregar múltiples tamaños de imagenes si es necesario.
                </li>
            </ul>
        </div>
    </div>
    <!--/.row-->

    <div class="panel panel-container">
        <div class="row">
            <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
                <div class="panel panel-teal panel-widget border-right">
                    <div class="row no-padding">
                        <h2>Imagen de Portada 1</h2>
                        <!-- IMAGEN -->
                        <form action="./modificaciones" method="post" enctype="multipart/form-data">
                            <input type="text" name="posicion" style="display: none" value="1" />
                            <label for="file-upload-1" class="subir">
                    <i class="fas fa-cloud-upload-alt"></i> Subir archivo
                  </label>
                            <input name="portada" id="file-upload-1" onchange="cambiar1()" type="file" style="display: none" />
                            <div id="info-1"></div>
                            <button type="submit" class="btn btn-primary" id="portada1">
                    Cambiar
                  </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
                <div class="panel panel-blue panel-widget border-right">
                    <div class="row no-padding">
                        <h2>Imagen de Portada 2</h2>
                        <!-- IMAGEN -->
                        <form action="./modificaciones" method="post" enctype="multipart/form-data">
                            <input type="text" name="posicion" style="display: none" value="2" />
                            <label for="file-upload-2" class="subir">
                    <i class="fas fa-cloud-upload-alt"></i> Subir archivo
                  </label>
                            <input name="portada" id="file-upload-2" onchange="cambiar2()" type="file" style="display: none" />
                            <div id="info-2"></div>
                            <button type="submit" class="btn btn-primary" id="portada1">
                    Cambiar
                  </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
                <div class="panel panel-blue panel-widget border-right">
                    <div class="row no-padding">
                        <h2>Imagen de Portada 3</h2>
                        <!-- IMAGEN -->
                        <form action="./modificaciones" method="post" enctype="multipart/form-data">
                            <input type="text" name="posicion" style="display: none" value="3" />
                            <label for="file-upload-3" class="subir">
                    <i class="fas fa-cloud-upload-alt"></i> Subir archivo
                  </label>
                            <input name="portada" id="file-upload-3" onchange="cambiar3()" type="file" style="display: none" />
                            <div id="info-3"></div>
                            <button type="submit" class="btn btn-primary" id="portada1">
                    Cambiar
                  </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
                <div class="panel panel-orange panel-widget border-right">
                    <div class="row no-padding">
                        <h2>Imagen de Portada 4</h2>
                        <!-- IMAGEN -->
                        <form action="./modificaciones" method="post" enctype="multipart/form-data">
                            <input type="text" name="posicion" style="display: none" value="4" />
                            <label for="file-upload-4" class="subir">
                    <i class="fas fa-cloud-upload-alt"></i> Subir archivo
                  </label>
                            <input name="portada" id="file-upload-4" onchange="cambiar4()" type="file" style="display: none" />
                            <div id="info-4"></div>
                            <button type="submit" class="btn btn-primary" id="portada1">
                    Cambiar
                  </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!--/.row-->
    </div>
    <div class="panel panel-container">
        <div class="row">
            <div class="col-12">
                <p>

                </p>
                <textarea class="textContent" name="mensaje"></textarea>
                <form action="/admin/modificarMensaje" method="post">
                    <input type="text" name="textoEnriquecido" id="textoEnriquecido" hidden>
                    <button class="btn btn-primary" onclick="changeText()" id="modificarMensaje">
              Modificar información.
            </button>
                </form>
            </div>
        </div>
    </div>
    <hr />
    <div class="panel panel-container">
        <div class="producto-container">
            <button id="togglerProductos"><h2>Precios de productos</h2></button><br>
            <div id="productosExpand">
                <% i=0; %>
                    <% productos.categorias.forEach(categoria => { %>
                        <% i++; %>
                            <h3>
                                <%= categoria.nombre %>
                            </h3>
                            <% categoria.productos.forEach(producto => { %>
                                <div class="producto">
                                    <h3>
                                        <%= producto.nombre %>
                                    </h3>
                                    <p>Precio actual: $
                                        <%= producto.precio %>
                                    </p>
                                    <form action="/admin/modificaciones/producto/precio" method="post" autocomplete="off" data-toggle="tooltip" data-placement="bottom" title="Solo incluír numeros (Sin signos ni letras)">
                                        <input type="text" name="precioNuevo" placeholder="Precio nuevo" />
                                        <input name="productoId" type="text" value="<%= producto.id %>" hidden="true" />
                                        <button type="submit">Confirmar</button>
                                    </form>
                                </div>
                                <% }); %>
                                    <% }); %>
            </div>
        </div>
    </div>
    <input type="text" id="aux1" value="<%= message.texto %>">
    <br /><br />
    </div>
    <!--/.main-->
    <script src="../admin/js/jquery-1.11.1.min.js"></script>
    <script src="../admin/js/bootstrap.min.js"></script>
    <script src="../admin/js/jquery.richtext.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.textContent').richText();
            document.getElementsByClassName('richText-editor')[0].innerHTML = document.getElementById('aux1').value;
            $('#aux1').remove()
        });

        function changeText() {
            $('#textoEnriquecido').val($('.textContent').val());
        }
    </script>
    <script>
        if (
            /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(
                navigator.userAgent
            )
        ) {
            // document.getElementById('header').style.backgroundImage = 'url(img/Background-Home-mb.jpg)';
            document.getElementById("boton-modificar").style.display = "none";
        }
        $(function() {
            $('[data-toggle="tooltip"]').tooltip();
        });
        $('#togglerProductos').click(function() {
            $('#productosExpand').toggle();
        });
    </script>
    <script>
        function cambiar1() {
            var pdrs = document.getElementById("file-upload-1").files[0].name;
            document.getElementById("info-1").innerHTML = pdrs;
        }

        function cambiar2() {
            var pdrs = document.getElementById("file-upload-2").files[0].name;
            document.getElementById("info-2").innerHTML = pdrs;
        }

        function cambiar3() {
            var pdrs = document.getElementById("file-upload-3").files[0].name;
            document.getElementById("info-3").innerHTML = pdrs;
        }

        function cambiar4() {
            var pdrs = document.getElementById("file-upload-4").files[0].name;
            document.getElementById("info-4").innerHTML = pdrs;
        }
    </script>
    <style>
        .subir {
            padding: 5px 10px;
            background: #0a053f;
            color: #fff;
            border: 0px solid #fff;
        }
        
        .subir:hover {
            color: #fff;
            background: #120422;
        }
        
        .producto-container {
            margin-left: 20px;
            margin-right: 20px;
        }
        
        .producto-container>button {
            all: unset;
        }
        
        .producto-container>button:hover {
            cursor: pointer;
        }
        
        .producto {
            margin-bottom: 20px;
            display: inline-block;
            width: calc(99% / 3);
            height: auto;
            padding-bottom: 20px;
            border: solid 1px #000;
            text-align: center;
        }
        
        .producto>h3 {
            text-align: center;
            font-size: 12pt;
            text-decoration: underline;
        }
        
        #productosExpand {
            display: none;
        }
    </style>
</body>

