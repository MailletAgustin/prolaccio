<script>
    function cart_Add(id) {
        console.log("Agregado: " + id);
        if (getCookie("productos")) {
            document.cookie = "productos=" + getCookie("productos") + id + ",";
            notificacionAdd();
            contarCantidadProductos(getCookie("productos"));
        } else { 
            document.cookie = "productos=" + id + ",";
            notificacionAdd();
            contarCantidadProductos(getCookie("productos"));
        };
    }
    function contarProductosExactos(cadena) {
        var indices = [];
        for (let i = 0; i < cadena.length; i++ ){
            if (cadena[i].toLowerCase() == ",") indices.push(cadena[i-1]);
        }
        
        console.log(indices);
    }
    function contarCantidadProductos(cadena) {
        var indices = [];
        for (let i = 0; i < cadena.length; i++ ){
            if (cadena[i].toLowerCase() == ",") indices.push(i);
        }
        document.getElementById("lblCartCount").innerHTML = indices.length;
    }
    function notificacionAdd() {
        iziToast.success({
            color: '#763695',
            buttons: [
                ['<button style="color: #e6e7e9;">❤️ Producto agregado</button>', function (instance, toast) { 
                    
                }, false],
                ['<button style="color: #e6e7e9;">Ver el carrito</button>', function (instance, toast) {
                    window.location.href = "/carrito";
                    contarProductosExactos(getCookie("productos"));
                }, false]
            ]
         });
    }
    function getCookie(cname) {
        var name = cname + "=";
        var decodedCookie = decodeURIComponent(document.cookie);
        var ca = decodedCookie.split(';');
        for(var i = 0; i <ca.length; i++) {
            var c = ca[i];
            while (c.charAt(0) == ' ') {
            c = c.substring(1);
            }
            if (c.indexOf(name) == 0) {
            return c.substring(name.length, c.length);
            }
        }
        return "";
    }
    if (!getCookie("productos")) {
        document.getElementById("lblCartCount").innerHTML = "0" 
    } else {
        contarCantidadProductos(getCookie("productos"));
    }
